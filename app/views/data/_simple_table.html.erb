<table class='display datatable'>
	<thead>
		<tr>
			<%columns.each do |c|%>
			<th class="text-center"><%= c.titleize%></th>
			<%end%>
		</tr>
	</thead>

	<tbody>
		<%rows.each do |row|%>
		<tr>
			<%columns.each do |c|%>
			<td class='col-min-width text-center'><%= row.send(c) %></td>
			<%end%>
		</tr>
		<%end%>
	</tbody>
</table>